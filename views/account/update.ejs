<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
</head>
<body>
    <header>
        <%- include('../partials/header', {nav}) %>
    </header>
    
    <main>
        <div class="main-content">
            <h1>Update Account Information</h1>
            
            <!-- Flash Messages -->
            <% if (messages && messages.success) { %>
                <div class="flash-message success"><%= messages.success %></div>
            <% } %>
            <% if (messages && messages.error) { %>
                <div class="flash-message error"><%= messages.error %></div>
            <% } %>

            <% if (errors && errors.length > 0) { %>
                <div class="errors">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <!-- Account Update Form -->
            <div class="form-container">
                <h2>Account Update</h2>
                <form action="/account/update" method="post">
                    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
                    
                    <label for="account_firstname">First Name:</label>
                    <input 
                        type="text" 
                        id="account_firstname" 
                        name="account_firstname" 
                        required
                        value="<%= (accountData && accountData.account_firstname) || '' %>"
                    >
                    
                    <label for="account_lastname">Last Name:</label>
                    <input 
                        type="text" 
                        id="account_lastname" 
                        name="account_lastname" 
                        required
                        value="<%= (accountData && accountData.account_lastname) || '' %>"
                    >
                    
                    <label for="account_email">Email:</label>
                    <input 
                        type="email" 
                        id="account_email" 
                        name="account_email" 
                        required
                        value="<%= (accountData && accountData.account_email) || '' %>"
                    >
                    
                    <button type="submit">Update Account</button>
                </form>
            </div>

            <!-- Change Password Form -->
            <div class="form-container">
                <h2>Change Password</h2>
                <form action="/account/update-password" method="post">
                    <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
                    
                    <label for="account_password">New Password:</label>
                    <input 
                        type="password" 
                        id="account_password" 
                        name="account_password" 
                        required
                        pattern="(?=^.{8,}$)(?=.*\d)(?=.*\W+)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                        title="Must contain at least one number, one uppercase and lowercase letter, one special character, and be at least 8 characters long"
                    >
                    <p class="form-note">Password must be at least 8 characters with at least one number, one uppercase letter, one lowercase letter, and one special character.</p>
                    
                    <button type="submit">Change Password</button>
                </form>
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <a href="/account">Back to Account Management</a>
            </div>
        </div>
    </main>
    
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>