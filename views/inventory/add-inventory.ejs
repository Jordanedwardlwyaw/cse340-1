<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
</head>
<body>
    <header>
        <%- include('../partials/header', {nav}) %>
    </header>
    
    <main>
        <div class="main-content">
            <h1>Add New Vehicle</h1>
            
            <!-- Flash Messages -->
            <% if (messages.success) { %>
                <div class="flash-message success"><%= messages.success %></div>
            <% } %>
            <% if (messages.error) { %>
                <div class="flash-message error"><%= messages.error %></div>
            <% } %>

            <% if (errors && errors.length > 0) { %>
                <div class="errors">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <div class="form-container">
                <form action="/inv/add-inventory" method="post">
                    <label for="classification_id">Classification:</label>
                    <%- classificationList %>
                    
                    <label for="inv_make">Make:</label>
                    <input 
                        type="text" 
                        id="inv_make" 
                        name="inv_make" 
                        required
                        value="<%= (invData && invData.inv_make) || '' %>"
                    >
                    
                    <label for="inv_model">Model:</label>
                    <input 
                        type="text" 
                        id="inv_model" 
                        name="inv_model" 
                        required
                        value="<%= (invData && invData.inv_model) || '' %>"
                    >
                    
                    <label for="inv_description">Description:</label>
                    <textarea 
                        id="inv_description" 
                        name="inv_description" 
                        required
                    ><%= (invData && invData.inv_description) || '' %></textarea>
                    
                    <label for="inv_image">Image Path:</label>
                    <input 
                        type="text" 
                        id="inv_image" 
                        name="inv_image" 
                        value="/images/vehicles/no-image.png"
                    >
                    
                    <label for="inv_thumbnail">Thumbnail Path:</label>
                    <input 
                        type="text" 
                        id="inv_thumbnail" 
                        name="inv_thumbnail" 
                        value="/images/vehicles/no-image-tn.png"
                    >
                    
                    <label for="inv_price">Price:</label>
                    <input 
                        type="number" 
                        id="inv_price" 
                        name="inv_price" 
                        step="0.01"
                        required
                        value="<%= (invData && invData.inv_price) || '' %>"
                    >
                    
                    <label for="inv_year">Year:</label>
                    <input 
                        type="number" 
                        id="inv_year" 
                        name="inv_year" 
                        min="1900"
                        max="2030"
                        required
                        value="<%= (invData && invData.inv_year) || '' %>"
                    >
                    
                    <label for="inv_miles">Miles:</label>
                    <input 
                        type="number" 
                        id="inv_miles" 
                        name="inv_miles" 
                        required
                        value="<%= (invData && invData.inv_miles) || '' %>"
                    >
                    
                    <label for="inv_color">Color:</label>
                    <input 
                        type="text" 
                        id="inv_color" 
                        name="inv_color" 
                        required
                        value="<%= (invData && invData.inv_color) || '' %>"
                    >
                    
                    <button type="submit">Add Vehicle</button>
                </form>
                
                <a href="/inv/">Back to Management</a>
            </div>
        </div>
    </main>
    
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>