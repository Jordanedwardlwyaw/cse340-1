<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title}) %>
</head>
<body>
    <header>
        <%- include('../partials/header', {nav}) %>
    </header>
    
    <main>
        <div class="main-content">
            <h1><%= classificationName %> Vehicles</h1>
            
            <!-- Flash Messages -->
            <% if (messages && messages.success) { %>
                <div class="flash-message success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages && messages.error) { %>
                <div class="flash-message error">
                    <%= messages.error %>
                </div>
            <% } %>

            <div class="inventory-grid">
                <!-- Sample vehicles -->
                <div class="inventory-item">
                    <img src="/images/vehicles/escalade-tn.jpg" alt="Vehicle Image" class="car-image">
                    <h3>Sample <%= classificationName %> Car 1</h3>
                    <p><strong>Year:</strong> 2023</p>
                    <p><strong>Price:</strong> $25,999</p>
                    <p><strong>Color:</strong> Red</p>
                    <a href="/inv/detail/1" class="own-button">View Details</a>
                </div>
                
                <div class="inventory-item">
                    <img src="/images/vehicles/adventador.jpg" alt="Vehicle Image" class="car-image">
                    <h3>Sample <%= classificationName %> Car 2</h3>
                    <p><strong>Year:</strong> 2024</p>
                    <p><strong>Price:</strong> $32,500</p>
                    <p><strong>Color:</strong> Blue</p>
                    <a href="/inv/detail/2" class="own-button">View Details</a>
                </div>
                
                <div class="inventory-item">
                    <img src="/images/vehicles/aerocar.jpg" alt="Vehicle Image" class="car-image">
                    <h3>Sample <%= classificationName %> Car 3</h3>
                    <p><strong>Year:</strong> 2022</p>
                    <p><strong>Price:</strong> $28,750</p>
                    <p><strong>Color:</strong> Black</p>
                    <a href="/inv/detail/3" class="own-button">View Details</a>
                </div>
            </div>
            
            <div style="text-align: center; margin-top: 30px;">
                <a href="/inv" class="own-button">Back to Management</a>
            </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>